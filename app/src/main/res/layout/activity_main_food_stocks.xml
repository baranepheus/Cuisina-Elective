<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFoodStocksActivity">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="30dp"
        android:text="@string/insert_picture"
        />

    <Button
        android:id="@+id/buttonFruitsActivity"
        android:text="Fruits"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"
        />

    <Button
        android:id="@+id/buttonMeatActivity"
        android:text="Meat"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/buttonDairyActivity"
        android:text="Dairy"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/buttonVegetableActivity"
        android:text="Vegetables"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"/>

    <Button
        android:id="@+id/buttonCondimentsActivity"
        android:text="Condiments"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginBottom="30dp"
        android:layout_marginHorizontal="30dp"/>

</LinearLayout>
</ScrollView>